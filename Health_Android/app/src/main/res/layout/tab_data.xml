<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg"
    android:orientation="vertical">

    <com.tentinet.healthy.view.TitleView
        android:id="@+id/measure_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/tab_data_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/group_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_default_for_horizontal"
            android:paddingTop="@dimen/padding_default_for_horizontal"

            >

            <RadioButton
                android:id="@+id/radio_measurement"
                style="@style/txt_style_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/measurement"
                android:textColor="@color/font_color_green_default"

                />

            <RadioButton
                android:id="@+id/radio_data"
                style="@style/txt_style_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:gravity="center"
                android:text="@string/data"
                android:textColor="@color/font_color_default" />
        </RadioGroup>

        <TextView
            android:id="@+id/txt_right_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/group_change"

            android:background="@drawable/shape_line"
            android:textColor="@color/font_color_green_default"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
