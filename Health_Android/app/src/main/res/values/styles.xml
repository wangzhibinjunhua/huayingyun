<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="AppThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="tab_style_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_style_default">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:textColor">@color/font_color_default</item>
    </style>

    <style name="txt_style_title">
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textColor">@color/font_color_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_style_small">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/font_color_gray</item>
    </style>

    <style name="data_item_txt_style_title">
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textColor">@color/data_title</item>
    </style>
    <!-- ==========横线（灰）========== -->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_default</item>
    </style>

    <!-- ==========横线（灰）========== -->
    <style name="line_horizontal_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black</item>
    </style>


    <style name="title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="selectorDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <!--         <item name="android:windowBackground">@drawable/selector_dialog_bg</item> -->
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>

    </style>

    <style name="WaitDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="DefalutDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="EditInputBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">@dimen/padding_default_for_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_default_for_horizontal</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EditInputClearStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/common_input_delete_selector</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="UpdateMineInfoTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:drawableRight">@mipmap/right_arrows</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">@dimen/padding_default_for_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_default_for_horizontal</item>
        <item name="android:paddingRight">@dimen/padding_default_for_horizontal</item>
        <item name="android:textColor">@color/font_color_gray</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

    <style name="MineButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_default_for_horizontal</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:drawableRight">@mipmap/right_arrows</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_default</item>
    </style>
</resources>
