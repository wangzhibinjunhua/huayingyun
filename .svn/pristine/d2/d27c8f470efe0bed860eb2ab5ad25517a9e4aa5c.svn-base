<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_94"
    android:paddingLeft="@dimen/spacing_default"
    android:paddingRight="@dimen/spacing_default"
    android:paddingTop="@dimen/spacing_default"
    android:background="@drawable/background_common_selector"
    >

    <ImageView
        android:id="@+id/img_image"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_70"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_image"
        android:layout_toRightOf="@id/img_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_big" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_image"
        android:layout_toRightOf="@id/img_image"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/font_size_small" />

    <View
        android:visibility="gone"
        style="@style/line_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/spacing_default" />
</RelativeLayout>
