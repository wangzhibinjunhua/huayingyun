<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_date1"
        style="@style/data_item_txt_style_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_bg" />
    <TextView
        style="@style/data_item_txt_style_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blood_ecg_measurement"
        android:padding="@dimen/padding_default"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_default"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            style="@style/data_item_txt_style_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/heart_rate"/>

        <TextView
            android:id="@+id/txt_blood_sugar"
            style="@style/txt_style_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_30"
            android:textColor="@color/font_color_green_default"/>
    </LinearLayout>

</LinearLayout>
