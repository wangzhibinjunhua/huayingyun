<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/register_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_color_green_default">

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_18"
            android:paddingTop="@dimen/dp_15"
            android:text="@string/dialog_image_camear"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_18"
            android:text="@string/dialog_image_picture"
            android:textColor="@color/font_color_default"
            android:textSize="@dimen/font_size_default" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_btn_selector"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_big"

            />

        <TextView
            android:layout_width="@dimen/line_height"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_btn_selector"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_big" />


    </LinearLayout>
</LinearLayout>
