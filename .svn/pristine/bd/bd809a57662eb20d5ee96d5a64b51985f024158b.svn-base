<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_date1"
        style="@style/data_item_txt_style_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/data_item_txt_style_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default"
            android:text="@string/blood_sugar_measurement" />

        <TextView
            android:id="@+id/txt_blood_sugar_date"
            style="@style/data_item_txt_style_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_default_for_horizontal"
            android:padding="@dimen/padding_default"
            android:text="@string/blood_sugar_measurement" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/data_item_txt_style_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default"
            android:text="@string/measurement_result_msg" />

        <TextView
            android:id="@+id/txt_blood_sugar_result"
            style="@style/data_item_txt_style_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default"
            android:text="@string/blood_sugar_measurement" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/padding_default"
        android:paddingTop="@dimen/dp_20">

        <TextView
            style="@style/data_item_txt_style_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/blood_sugar" />

        <TextView
            android:id="@+id/txt_blood_sugar"
            style="@style/txt_style_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/font_color_green_default"
            android:textSize="@dimen/dp_30" />
    </LinearLayout>

</LinearLayout>
