<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_common_selector"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_default_for_horizontal">

    <ImageView
        android:id="@+id/home_tab_imv_ic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/home_tab_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="@dimen/padding_default"
        android:textColor="@color/data_title"
        android:textSize="@dimen/font_size_default" />
</LinearLayout>

